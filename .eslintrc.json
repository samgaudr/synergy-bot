{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "object-curly-spacing":  ["error", "always"],
        "max-len": ["error", { "code": 240 }],
        "require-jsdoc": 0,
        "padded-blocks": ["error", {
            "classes": "always",
            "block": "never",
            "switch": "never"
        }]
    }
}
